<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ONBOARDING SECTION -->
    <LinearLayout
        android:id="@+id/layout_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to EarthQuake Friend"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Mesh Network"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <!-- DASHBOARD SECTION -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_scanning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanning..."
                android:textSize="12sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_help"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="HELP NEEDED"
            android:textSize="24sp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_status_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_safe"/>

        <Button
            android:id="@+id/btn_safe"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="I AM SAFE"
            android:textSize="24sp"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_status_title"
            app:layout_constraintStart_toEndOf="@id/btn_help"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_help_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELP REQUESTS"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_help"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_help"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_help_label"
            app:layout_constraintBottom_toTopOf="@id/tv_safe_label"
            app:layout_constraintVertical_weight="1"/>

        <TextView
            android:id="@+id/tv_safe_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAFE Reports &amp; Chat"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_help"
            app:layout_constraintBottom_toTopOf="@id/recycler_safe"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_safe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_safe_label"
            app:layout_constraintBottom_toTopOf="@id/layout_chat_input"
            app:layout_constraintVertical_weight="1"/>

        <LinearLayout
            android:id="@+id/layout_chat_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message..."
                android:imeOptions="actionSend"
                android:inputType="textShortMessage"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>